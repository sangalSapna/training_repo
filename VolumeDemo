apiVersion: v1 # K8S API Version
kind: Pod  # Object Type
metadata: 
 name: mypod 
spec:
 containers: 
 - name: app1 
   image: supergiantkir/animals:bear 
   ports: 
   - containerPort: 80
   volumeMounts:
    - mountPath: /tmp/files
      name: app-storage 
 volumes:
  - name: app-storage 
    hostPath:
    path: /data
 - name: app2
   image: yanivomc/spring-music:latest
   ports: 
   - containerPort: 8080
   volumeMounts:
    - mountPath: /tmp/files
      name: app-storage
    volumes:
    - name: app-storage
    hostPath:
    path: /data
