apiVersion: v1
kind: Pod
metadata:
  name: mypod
spec:
  containers:
  - name: app1
    image: supergiantkir/animals:bear
    volumeMounts:
    - name: app-storage
      mountPath: /tmp/files
  - name: app2
    image: yanivomc/spring-music:latest
    ports:
    - containerPort: 8080
    volumeMounts:
    - name: app-storage
      mountPath: /tmp/files
  volumes:
  - name: app-storage
    hostPath:
      path: /data
